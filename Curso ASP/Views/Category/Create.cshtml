@using Curso_ASP.Models.View_Model
@model CategoryViewModel

<h3>Agg Categoria</h3>

<hr />

<!--Con asp-for se une la información entre categoryViewModel y este archivo-->

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
            <div class="form-group">
                <label asp-for="NameBrand" class="control-label"></label>
                <input asp-for="NameBrand" class="form-control"/>
                <span asp-validation-for="NameBrand" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="Brandld" class="control-label"></label>
                <select asp-for="Brandld" class="form-control" asp-items="ViewBag.Brands"></select>
                <span asp-validation-for="Brandld" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}